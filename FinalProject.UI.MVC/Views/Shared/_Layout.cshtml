<!doctype html>
<html lang="en">
<head>
    <title>COVF - Coronavirus Vaccination Foundation</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@400;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/jquery-ui.css">
    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/Content/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/Content/fonts/flaticon-covid/font/flaticon.css">
    <link rel="stylesheet" href="~/Content/css/aos.css">
    <link rel="stylesheet" href="~/Content/css/style.css">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    @RenderSection("css", false)
    <link href="~/Content/css/custom.css" rel="stylesheet" />
    <link rel="icon" href="~/Content/images/flaticon/svg/virus-2.svg" />
</head>
<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">

    <div id="overlayer"></div>
    <div class="loader">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <div class="site-wrap">
        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>

        <header class="site-navbar light js-sticky-header site-navbar-target" role="banner">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-6 col-xl-2">
                        <div class="mb-0 site-logo"><a href="/Home/Index" class="mb-0"><span class="flaticon-virus" style="margin-right: 1em"></span>COVF<span class="text-primary">.</span> </a></div>
                    </div>
                    <div class="col-12 col-md-10 d-none d-xl-block">
                        <nav class="site-navigation position-relative text-right" role="navigation">
                            <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>

                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                                @if (User.IsInRole("Employee"))
                                {
                                    <li>@Html.ActionLink("Open Positions", "Index", "OpenPositions", null, new { @class = "nav-link" })</li>
                                    <li>@Html.ActionLink("My Applications", "Index", "Applications", null, new { @class = "nav-link" })</li>
                                }

                                @if (User.IsInRole("Manager"))
                                {
                                    <li class="has-children">
                                        <a class="nav-link">Manager</a>
                                        <ul class="dropdown">
                                            @Html.ActionLink("Applications", "Index", "Applications", null, new { @class = "nav-link" })
                                            @Html.ActionLink("Open Positions", "Index", "OpenPositions", null, new { @class = "nav-link" })
                                        </ul>
                                    </li>
                                }

                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="has-children">
                                        <a class="nav-link">Admin</a>
                                        <ul class="dropdown">
                                            @Html.ActionLink("Applications", "Index", "Applications", null, new { @class = "nav-link" })
                                            @Html.ActionLink("Open Positions", "Index", "OpenPositions", null, new { @class = "nav-link" })
                                            @Html.ActionLink("Application Statuses", "Index", "ApplicationStatus", null, new { @class = "nav-link" })
                                            @Html.ActionLink("Positions", "Index", "Positions", null, new { @class = "nav-link" })
                                            @Html.ActionLink("Locations", "Index", "Locations", null, new { @class = "nav-link" })
                                            @Html.ActionLink("Users Admin", "Index", "UsersAdmin", null, new { @class = "nav-link" })
                                            @Html.ActionLink("Roles Admin", "Index", "RolesAdmin", null, new { @class = "nav-link" })
                                        </ul>
                                    </li>
                                }

                                <li>@Html.Partial("_LoginPartial")</li>
                            </ul>
                        </nav>
                    </div>


                    <div class="col-6 d-inline-block d-xl-none ml-md-0 py-3" style="position: relative; top: 3px;"><a href="#" class="site-menu-toggle js-menu-toggle float-right"><span class="icon-menu h3 text-black"></span></a></div>
                </div>
            </div>
        </header>



        @RenderBody()



   
        <!-- FOOTER -->
        <div class="site-footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4">
                        <h2 class="footer-heading mb-4">About</h2>
                        <p>We run several COVID-19 vaccination sites accross the country, and we're constantly looking for people to vonunteer and work for us to try and get as many people as possible vaccinated every day! Check out some of our openings!</p>
                        <div class="my-5">
                            <a href="https://www.linkedin.com/in/w-colton-weeks/" class="pl-0 pr-3" ><i class="fab fa-linkedin footer-icon"></i></a>
                            <a href="https://github.com/wcoltonweeks" class="pl-3 pr-3"><i class="fab fa-github-square footer-icon"></i></a>
                            
                           
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="row">
                            <div class="col-lg-4">
                                <h2 class="footer-heading mb-4">Quick Links</h2>
                                <ul class="list-unstyled">
                                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                </ul>
                            </div>
                            @if (User.IsInRole("Manager"))
                            {
                            <div class="col-lg-4">
                                <h2 class="footer-heading mb-4">Manager Links</h2>
                                <ul class="list-unstyled">
                                    @Html.ActionLink("Applications", "Index", "Applications", null, new { @class = "nav-link" })
                                    @Html.ActionLink("Open Positions", "Index", "OpenPositions", null, new { @class = "nav-link" })
                                </ul>
                            </div>
                            }
                            @if (User.IsInRole("Admin")){ 
                            <div class="col-lg-4">
                                <h2 class="footer-heading mb-4">Admin Links</h2>
                                <ul class="list-unstyled">
                                    @Html.ActionLink("Applications", "Index", "Applications", null, new { @class = "nav-link" })
                                    @Html.ActionLink("Open Positions", "Index", "OpenPositions", null, new { @class = "nav-link" })
                                    @Html.ActionLink("Application Statuses", "Index", "ApplicationStatus", null, new { @class = "nav-link" })
                                    @Html.ActionLink("Positions", "Index", "Positions", null, new { @class = "nav-link" })
                                    @Html.ActionLink("Locations", "Index", "Locations", null, new { @class = "nav-link" })
                                    @Html.ActionLink("Users Admin", "Index", "UsersAdmin", null, new { @class = "nav-link" })
                                    @Html.ActionLink("Roles Admin", "Index", "RolesAdmin", null, new { @class = "nav-link" })
                                </ul>
                            </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-md-12">
                        <div class="border-top pt-5">
                            <p class="copyright">
                                <small>
                                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                    Copyright &copy;
                                    <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="icon-heart text-danger" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a> Converted for .NET MVC by <a href="http://www.codeweeks.com/">Colton Weeks</a>
                                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- .site-wrap -->
    <script src="~/Content/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/js/jquery-ui.js"></script>
    <script src="~/Content/js/popper.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <script src="~/Content/js/jquery.countdown.min.js"></script>
    <script src="~/Content/js/jquery.easing.1.3.js"></script>
    <script src="~/Content/js/aos.js"></script>
    <script src="~/Content/js/jquery.fancybox.min.js"></script>
    <script src="~/Content/js/jquery.sticky.js"></script>
    <script src="~/Content/js/isotope.pkgd.min.js"></script>

    <script src="~/Content/js/main.js"></script>

    @RenderSection("scripts", false)
    <script>
        $('.site-navbar .site-navigation .site-menu > li').each(function () {
            if ($(this).find('a').attr('href') == window.location.pathname) {
                $(this).addClass('active');
            }
        });
    </script>
</body>
</html>